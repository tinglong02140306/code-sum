/* pages/mine/ticket-buy/details/details.wxss */
.ticket-buy-details-container{
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    box-sizing: border-box;
}
/*卡片*/
.ticket-buy-details-top-box{
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    box-sizing: border-box;
}
.ticket-buy-details-card{
    width: 690rpx;
    height: 206rpx;
    border-radius: 24rpx;
    background-color: #FFFFFF;
}
.ticket-card-details-bg-img{
    width: 690rpx;
    height: 206rpx;
    border-top-right-radius: 24rpx;
    border-top-left-radius: 24rpx;
    position: relative;
    margin-top: 32rpx;
}
.ticket-card-details-box{
    margin-top: 32rpx;
    width: 690rpx;
    height: 206rpx;
    border-top-right-radius: 24rpx;
    border-top-left-radius: 24rpx;
    /*background-color: #8D1233;*/
    display: flex;
    flex-direction: column;
    position: absolute;
    align-items: center;
    justify-content: center;
}
.ticket-card-details-info-top{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    width: 100%;
    margin-top: 12rpx;
}
.ticket-card-details-info-top-2{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    width: 100%;
    margin-top: 24rpx;
}
.ticket-card-details-name-text{
    color: rgba(246, 221, 178, 1);
    font-size: 36rpx;
    text-align: left;
    font-family: PingFang-SC-Heavy;
    margin-left: 42rpx;
}
.ticket-card-details-discount-value{
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    width: 96rpx;
    height: 42rpx;
    border-bottom-left-radius: 16rpx;
    border-top-left-radius: 16rpx;
    background-color: rgba(5, 186, 125, 1);
    color: rgba(0, 0, 0, 1);
    font-size: 28rpx;
    text-align: left;
    font-family: PingFang-SC-Bold;
}
.ticket-card-details-discount-value-rush{
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    width: 96rpx;
    height: 42rpx;
    border-bottom-left-radius: 16rpx;
    border-top-left-radius: 16rpx;
    background-color: rgba(255, 228, 183, 1);
    color: rgba(0, 0, 0, 1);
    font-size: 28rpx;
    text-align: left;
    font-family: PingFang-SC-Bold;
}
.ticket-card-details-count-text{
    margin-left: 42rpx;
    margin-top: 20rpx;
    height: 38rpx;
    color: rgb(255, 228, 183);
    font-size: 26rpx;
    text-align: left;
    font-family: PingFangSC-Regular;
}
.ticket-card-details-money-content{
    margin-right: 22rpx;
    color: rgba(255, 228, 183, 1);
    font-size: 28 rpx;
    text-align: left;
    font-family: PingFang-SC-Bold;
}
/*详情*/
.ticket-card-details-info-box{
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    text-align: left;
    /*align-items: center;*/
    box-sizing: border-box;
    background-color: #FFFFFF;
}
.ticket-card-details-info-title{
    width: 80%;
    color: rgba(0, 0, 0, 0.85);
    font-size: 42rpx;
    text-align: left;
    font-family: PingFangSC-Regular;
    padding: 24rpx 40rpx 0rpx 30rpx;
}
.ticket-card-details-info-sub{
    width: 80%;
    color: rgba(0, 0, 0, 0.45);
    font-size: 26rpx;
    text-align: left;
    font-family: PingFangSC-Regular;
    padding: 10rpx 40rpx 0rpx 30rpx;
}

/*站点*/
.ticket-buy-details-station-container{
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    height: 262rpx;
    background: linear-gradient(to bottom, #FFFFFF , #F8F8F8);
    margin-top: 18rpx;
}
.ticket-buy-details-station{
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    box-sizing: border-box;
    padding: 30rpx;
}
.ticket-buy-details-station-count{
    color: rgba(0, 0, 0, 0.85);
    font-size: 32rpx;
    text-align: left;
    font-family: PingFangSC-Regular;
}
.ticket-buy-details-station-see{
    color: rgba(0, 0, 0, 0.65);
    font-size: 26rpx;
    text-align: left;
    font-family: PingFangSC-Regular;
}

/*地点位置*/
.ticket-buy-details-locale-box{
    width: 710rpx;
    height: 156rpx;
    border-radius: 12rpx;
    background-color: rgba(255, 255, 255, 1);
    box-shadow: 0rpx 4rpx 10rpx 0rpx rgba(0, 0, 0, 0.05);
    display: flex;
    flex-direction: row;
}
.ticket-buy-details-locale-img-box{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 156rpx;
}
.ticket-buy-details-locale-img{
    width: 82rpx;
    height: 82rpx;
    border-radius: 8rpx;
    border: 2rpx solid rgba(0, 0, 0, 0.45);
    margin-left: 18rpx;
    margin-right: 18rpx;
}
.ticket-buy-details-station-box{
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: center;
    text-align: left;
    width: 50%;
}
.ticket-buy-details-station-name{
    color: rgba(51, 51, 51, 1);
    font-size: 32rpx;
    text-align: left;
    font-family: PingFangSC-Medium;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
    width: 100%;
    margin-right: 20rpx;
}
.ticket-buy-details-station-locale{
    width: 100%;
    margin-right: 20rpx;
    color: rgba(0, 0, 0, 0.45);
    font-size: 26rpx;
    text-align: left;
    font-family: PingFangSC-Regular;

    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
}
.ticket-buy-details-station-distance{
    display: flex;
    flex-direction: column;
    flex: 1;
    justify-content: center;
    align-items: flex-end;
}
.ticket-buy-details-station-near{
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    width: 138rpx;
    height: 42rpx;
    border-radius: 0rpx 12rpx 0rpx 12rpx;
    background-color: rgba(227, 194, 131, 1);
    color: rgba(117, 65, 0, 1);
    font-size: 24rpx;
    text-align: center;
    font-family: PingFangSC-Medium;
}
.ticket-buy-station-distance-navigation{
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    flex: 1;
}
.ticket-buy-station-distance{
    font-size: 24rpx;
    /*width: 103px;*/
    /*height: 33px;*/
    color: rgba(51, 51, 51, 1);
    text-align: right;
    font-family: PingFang-SC-Medium;
}
.ticket-buy-navigation-logo{
    width:40rpx;
    height: 40rpx;
    margin-left: 10rpx;
    margin-right: 30rpx;
}
/*说明*/
.ticket-buy-details-instruct{
    background-color: #FFFFFF;
    width: 100%;
    display: flex;
    flex-direction: column;
    margin-top: 32rpx;
    margin-bottom: 170rpx;
}
.ticket-buy-details-instruct-title{
    color: rgba(0, 0, 0, 0.85);
    font-size: 32rpx;
    text-align: left;
    font-family: PingFangSC-Regular;
    margin: 30rpx 40rpx 0rpx 40rpx;
}
.ticket-buy-details-instruct-content{
    color: rgba(0, 0, 0, 0.45);
    font-size: 26rpx;
    text-align: left;
    font-family: PingFangSC-Regular;
    margin: 10rpx 32rpx 0rpx 32rpx;
}
.ticket-buy-details-instruct-bottom{
    height: 30rpx;
    width: 100%;
    background-color: #FFFFFF;
}
/*购买*/
.ticket-buy-confirm-box{
    width: 750rpx;
    padding: 30rpx 32rpx;
    background-color: rgba(255, 255, 255, 1);
    box-shadow: 0rpx -4rpx 20rpx 0rpx rgba(0, 0, 0, 0.04);
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    box-sizing: border-box;
    position: fixed;
    bottom: 0px;
    z-index: 2000;

}
.ticket-buy-confirm-hint{
    width: 112rpx;
    color: rgba(0, 0, 0, 0.85);
    font-size: 28rpx;
}
.ticket-buy-confirm-money-box{
    flex: 1;
    max-height: 52rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
    box-sizing: border-box;
}
.ticket-buy-confirm-mark{
    color: rgba(5, 186, 125, 1);
    font-size: 24rpx;
    align-self: flex-end;
    padding-bottom: 4rpx;
}
.ticket-buy-confirm-money{
    color: rgba(5, 186, 125, 1);
    font-size: 40rpx;
    font-weight: 500;
}
.ticket-buy-confirm-button{
    text-align: center;
    width: 180rpx;
    height: 72rpx;
    border-radius: 56rpx;
    background-color: rgba(5, 186, 125, 1);
    box-shadow: 0rpx 10rpx 40rpx 0rpx rgba(5, 186, 125, 0.2);
    font-size: 32rpx;
}
/*抢购*/
.ticket-rush-buy-bottom{
    width: 100%;
    height: 60rpx;
    background-color: #FFFFFF;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    box-sizing: border-box;
    padding: 0 40rpx;
}
.ticket-rush-buy-bottom-item{
    width: 60%;
    /*height: 89rpx;*/
    background-color: #FFFFFF;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    box-sizing: border-box;
}
.ticket-rush-buy-bottom-item-1{
    width: 40%;
    /*height: 89rpx;*/
    background-color: #FFFFFF;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    align-items: center;
    box-sizing: border-box;
}
.rush-buy-time-img{
    width: 20rpx;
    height: 20rpx;
    /*background-color: rgba(51, 51, 51, 1);*/
    margin-right: 5rpx;
    margin-top: 4rpx;
}
.rush-buy-time-hint{
    /*width: 120rpx;*/
    height: 33rpx;
    color: rgba(0, 0, 0, 0.65);
    font-size: 24rpx;
    text-align: left;
    margin-right: 8rpx;
    font-family: PingFangSC-Regular;
}
.rush-buy-time{
    /*width: 100rpx;*/
    height: 33rpx;
    color: rgba(5, 186, 125, 1);
    font-size: 24rpx;
    text-align: left;
    font-family: PingFang-SC-Bold;

}
.rush-buy-number{
    color: rgba(0, 0, 0, 0.45);
    font-size: 22rpx;
    text-align: left;
    font-family: PingFangSC-Regular;
}