/* pages/person/payment/bank-list/bank-list.wxss */
@import "../../../../templates/mine/bank-card/bank-card.wxss";
page{
    background-color: #F8F8F8;
    width: 100%;
    height: auto;
}
.bank-card-list-container{
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
}
.bank-card-list-cell{
    margin-top: 20rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
}
.bank-card-add{
    /*background-color: #1C1A24;*/
    /*position: fixed;*/
    /*flex: 1;*/
    /*bottom: 40rpx;*/
    margin-top: 50rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    width: 680rpx;
    height: 88rpx;
    border-radius: 8rpx;
